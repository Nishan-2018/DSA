class Solution {
public:
    /* Function to find whether the
    number is prime or not */
    bool isPrime(int n) {
        // Edge case
        if(n < 2) return false;
        
        // Loop from 2 to n-1
        for (int i = 2; i < n; ++i) {
            
            // Check if i is a divisor
            if (n % i == 0) {
                return false;
            }
        }
        
        // Return true as the number is prime
        return true;
    }
};
